{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboardApproval": false,
  "labels": [
    "dependencies",
    "version-bump-auto"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^src/envdrift/constants\\.json$/"
      ],
      "matchStrings": [
        "\"dotenvx_version\":\\s*\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "depNameTemplate": "dotenvx/dotenvx",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^src/envdrift/constants\\.json$/"
      ],
      "matchStrings": [
        "\"sops_version\":\\s*\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "depNameTemplate": "getsops/sops",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "addLabels": [
        "minor-version-bump"
      ],
      "commitMessagePrefix": "[auto-minor]",
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "major-version-bump"
      ],
      "commitMessagePrefix": "[auto-major]",
      "automerge": false
    }
  ],
  "prBodyTemplate": "{{{table}}}\n\n---\n\nðŸ¤– **Auto-generated version bump PR**\n\nThis PR was automatically created by Renovate to update dependency versions.\n\n- **Minor/Patch updates**: Will be auto-merged after CI passes\n- **Major updates**: Requires manual review and approval",
  "schedule": [
    "every weekend"
  ]
}
